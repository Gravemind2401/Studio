<m:MetroWindow x:Class="Sandbox.Controls.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:s="clr-namespace:Studio.Controls;assembly=Studio"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Sandbox.Controls"
        mc:Ignorable="d" Width="300" Height="300"
        s:DockManager.IsActive="{Binding IsActive, RelativeSource={RelativeSource Self}, Mode=OneWay}"
        Title="{Binding Content.SelectedItem.ToolTip, RelativeSource={RelativeSource Self}}"
        WindowStartupLocation="Manual" ShowMinButton="False"
        ContentTemplateSelector="{StaticResource tabTreeTemplateSelector}"
        Style="{StaticResource ToolWindowStyle}">
</m:MetroWindow>
